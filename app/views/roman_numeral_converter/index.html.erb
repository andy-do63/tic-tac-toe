<%= form_tag(nil, role: "form") do %>
	<div class="row">
		<div class="form-group col-md-3">
			<%= label_tag(:intNumber, "Integer") %>
			<%= number_field_tag(:intNumber, nil, class: 'form-control', placeholder: "Enter an integer from 0 to 3999") %>
		</div>
		<div class="form-group col-md-3">
			<%= label_tag(:romanNumber, "Roman Numeral") %>
			<%= text_field_tag(:romanNumber, nil, class: "form-control", placeholder: "Enter a roman numeral") %>
		</div>
	</div>

	<%= submit_tag("Convert", class: "btn btn-primary") %>
	<%= submit_tag("Cancel", class: "btn btn-danger", type: "reset") %>
<% end %>

<% if @results.nil? == false %>
	<% @results.each do | h, m | %>
		<%= m %><br />
	<% end %>
<% end %>
